<style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }
        .topnav {
            overflow: hidden;
            background-color: #333;
        }
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        } 

        .topnav a.active {
            background-color: #4CAF50;
            color: white;
        }
</style>
<div class="topnav">
        <a href="./">Home</a>
        <a href="users">Users</a>
        <a class="active" href="estimates">Estimates</a>
        <a href="devices">Devices</a>
        <a href="assistances">Assistances</a>
        <a href="repairs">Repairs</a>
</div>

<p id="notice"><%= notice %></p>
<div style="padding-left:16px">

<table border="1">
  <thead>
    <tr>
      <th>Username</th>
      <th>Tipo</th>
      <th>Issue</th>
      <th>Other</th>
      <th>Description</th>
      <th>Pdf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.username %></td>
        <td><%= estimate.tipo %></td>
        <td><%= estimate.issue %></td>
        <td><%= estimate.other %></td>
        <td><%= estimate.description %></td>
        <td><%= estimate.pdf %></td>
        <td><%= link_to 'Show', estimate %></td>
        <td><%= link_to 'Edit', edit_estimate_path(estimate) %></td>
        <td><%= link_to 'Destroy', estimate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Estimate', new_estimate_path %>
</div>
